<h1>BURGERS!!!!</h1>
<h2>Burgers to try</h2>
<ul>
    {{#each burger}}
        {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="devour" data-id="{{this.id}}" data-devoured="{{devoured}}">
                    Devour It!
                </button>
            </li>
        {{/unless}}
    {{/each}}
</ul>
<h2>Done been eaten!!</h2>
<ul>
    {{#each burger}}
        {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
        {{/if}}
    {{/each}}
</ul>
<h2>Add a Burger</h2>
<form class="create-form" method="POST" action="/burger">
    <div class="form-group">
        <label for="burger">Burger:</label>
        <input type="text" id="burger" name="burger">
    </div>
    <div class="form-group">
    </div>
    <button type="submit">Cook A Burger</button>
</form>